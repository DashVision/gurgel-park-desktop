<ResetPasswordScreen>:
	GridLayout:
		cols: 1
		padding: 10
		spacing: 10

		Label:
			text: "Redefinir Senha"
			font_size: 24
			size_hint_y: None
			height: self.texture_size[1]

		Label:
		text: "Digite sua nova senha"
			size_hint_y: None
			height: self.texture_size[1]	

			TextInput:
			id: new_password_input
				multiline: False
				hint_text: "Nova Senha"
				size_hint_y: None
				height: 40
				password: True

			Label:
			text: "Confirme sua nova senha"
				size_hint_y: None
				height: self.texture_size[1]
				TextInput:
				id: confirm_new_password_input
					multiline: False
					hint_text: "Confirmar Nova Senha"
					size_hint_y: None
					height: 40
					password: True

		Button:
		text: "Redefinir Senha"
			on_press: app.controller.reset_password(new_password_input.text, confirm_new_password_input.text)
			size_hint_y: None
			height: 40