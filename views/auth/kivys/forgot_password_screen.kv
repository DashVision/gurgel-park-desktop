<ForgotPasswordScreen>:
	GridLayout:
		cols: 1
		padding: 10
		spacing: 10

		Label:
			text: "Esqueceu a Senha"
			font_size: 24
			size_hint_y: None
			height: self.texture_size[1]

		Label:
		text: "Digite seu email para redefinir sua senha"
			size_hint_y: None
			height: self.texture_size[1]

			TextInput:
			id: email_input
				multiline: False
				hint_text: "Email"
				size_hint_y: None
				height: 40

		Button:
		text: "Enviar Email de Redefinição"
			on_press: app.controller.send_reset_email(email_input.text)
			size_hint_y: None
			height: 40

		Button:
		text: "Voltar para Login"
			on_press: app.controller.show_login_screen()
			size_hint_y: None
			height: 40